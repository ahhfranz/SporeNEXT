{
  "name": "spore-next",
  "version": "1.2.0",
  "main": "src/main/main.js",
  "type": "module",
  "scripts": {
    "start": "electron src/main/main.js",
    "dev": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "node-fetch": "^3.3.2",
    "winreg": "^1.2.5",
    "xml2js": "^0.6.2",
    "yauzl": "^3.2.0"
  },
  "build": {
    "appId": "com.spore.next",
    "productName": "Spore NEXT",
    "asar": true,
    "asarUnpack": [
      "resources/SporeModAPI/**/*"
    ],
    "files": [
      "public/**/*",
      "src/**/*",
      "Mods/**/*",
      "resources/SporeModAPI/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "Spore ModAPI Launcher Kit",
        "to": "Spore ModAPI Launcher Kit"
      },
      {
        "from": "resources/ModsInstallation",
        "to": "resources/ModsInstallation"
      },
      {
        "from": "resources/SporeModAPI",
        "to": "resources/SporeModAPI"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "ahhfranz",
        "repo": "SporeNEXT"
      }
    ],
    "directories": {
      "buildResources": "public/assets"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/spore-logo.png",
      "artifactName": "Spore-NEXT-Setup-${version}.${ext}",
      "requestedExecutionLevel": "requireAdministrator "
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "electronLanguages": [
      "en-US"
    ]
  }
}